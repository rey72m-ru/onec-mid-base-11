Асинх Процедура Нето_СкидкаПриИзменении(Элемент)
	// ++ Пантелеев 19.07.25 Домашнее задание 12-2-2	
	Если Объект.Товары.Количество() = 0 И Объект.Услуги.Количество() = 0 Тогда
		Возврат;
	КонецЕсли;
	
	Вопрос = ВопросАсинх("Пересчитать суммы с учетом новой скидки?", РежимДиалогаВопрос.ДаНет);
	ОтветНаВопрос = Ждать Вопрос;
	Если ОтветНаВопрос = КодВозвратаДиалога.Да Тогда
		ОбновитьТаблицы();
	КонецЕсли;
	// -- Пантелеев 19.07.25 Домашнее задание 12-2-2	
