	КомандаОбновитьСУчетомСкидки = Команды.Добавить("Пересчитать");
	КомандаОбновитьСУчетомСкидки.Действие = "Нето_Пересчитать";
	КнопкаОбновитьСУчетомСкидки = Элементы.Вставить("Пересчитать", Тип("КнопкаФормы"), Элементы.ГруппаСкидка);
